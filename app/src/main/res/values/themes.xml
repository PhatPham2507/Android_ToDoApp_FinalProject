<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
    <item name="colorControlActivated">@color/black</item>
    <item name="colorSwitchThumbNormal">#FFFFFF</item>
    <item name="android:colorForeground">#D5CDCD</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@drawable/home</item>
    </style>
    <style name="SCREENLOGIN">
        <item name="android:background">@drawable/login_bk</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">#1A090909</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="TASK">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>